# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WidgetController.index

# Widgets
GET     /widgets                    controllers.WidgetController.listWidgets
POST    /widgets                    controllers.WidgetController.createRequest

GET    /invoice                     controllers.WidgetController.invoice(invoice)
GET    /success                     controllers.WidgetController.success(txId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
